# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here

# Database Configuration
DATABASE_URL=mysql://username:password@localhost/faculty_review_dev

# Mail Configuration (Gmail SMTP example)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# University Configuration
UNIVERSITY_NAME=VIT-AP University
UNIVERSITY_DOMAIN=vitap.ac.in
UNIVERSITY_EMAIL_DOMAIN=vitap.ac.in

# Redis Configuration (for rate limiting)
REDIS_URL=redis://localhost:6379/0

# File Upload Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# Security Configuration (Production only)
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Development/Debug Settings
DEBUG=true
TESTING=false